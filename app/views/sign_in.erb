<header>
  <div class="header_items">
    <span>Blowfish</span>
    <span style="font-size:20px; color: ##226666">resource planning</span>
  <div>

</header>

  <div class="home_page_forms">
    <form action="/sign_in" method="get">
      <input type="text" placeholder="email" name="email">
      <input type="text" placeholder="password" name="password">
      <input class="hp_submit" type="submit" value="sign_in">
    </form>

    <% if @invalid_sign_in != nil %>
      <% @invalid_sign_in.each do |validation, value| %>
        <span> <%= value %> </span><br>
      <% end %>
    <% end %>

  </div>

  <div class="home_page_forms">
    <form action="/sign_up" method="get">
      <input type="text" placeholder="username" name="username">
      <input type="text" placeholder="email" name="email">
      <input type="text" placeholder="password" name="password">
      <input class="hp_submit" type="submit" value="sign_up">
    </form>
    <% if @sign_up_errors != nil %>
      <% @sign_up_errors.each do |validation, value| %>
        <span style="font-size: 12px;"> <%= value %> </span><br>
      <% end %>
    <% end %>
  </div>
